            <ul id="headerlinks" class="nav navbar-nav navbar-right">
                <% if logged_in? %>

                <li class="dropdown">
                    <a id="menu" href="#" data-toggle="dropdown">
                        <%= image_tag("hamburger.png", alt: "menu", :style => "height: 40px; width: 40px; border: none") %>
