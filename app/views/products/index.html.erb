<% provide(:title, 'Search') %>

<%= form_tag(products_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Enter a product here..." %>
<%= submit_tag "SEARCH", id: "searchsubmit" %>
<% end %>

<% if @product.present? %>
  <ol class="products">
  <%= render @product %>
</ol>
<% else %>
  <p>There are no products containing the term(s) <%= params[:search] %>.</p>
<% end %>
