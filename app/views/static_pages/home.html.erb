<% provide(:title, "Home") %>

<% if logged_in? %>
<div class="row">
<div>
    <h1 id="homeheader">Browse Products</h1>
    <h5>  <% @user ||= current_user %>
      <div class="stats">
        <a href="<%= following_user_path(@user) %>">
          <strong class="stat">
            Fan of <%= pluralize(@user.following.count, "user") %>
          </strong>
        </a>
      </div>

    </h5>

    <%= render 'shared/feed' %>

</div>

</div>
<% else %>

<div class="center jumbotron">
<h1 id="main"> Buy Together. Save Together.</h1>

<%= link_to "SIGN UP NOW!", signup_path, class: "btn btn-lg btn-primary", id: "signup" %>
</div>

<div id="loginform">
  <h2 id="loginheader">  CONTINUE HERE </h2>
  <div id="formforlogin">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
        <% end %>

        <%= f.submit "Log in", class: "btn btn-primary", id: "loginbtn" %>
      <% end %>
  </div>

</div>

<% end %>
