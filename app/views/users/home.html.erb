<% provide(:title, "Home") %>

<% if logged_in? %>
<div class="row">
    <aside>
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
        <section class="product_form">
            <%= render 'shared/product_form' %>
        </section>
    </aside>
</aside>
<div>
    <h3>Get Inspired
      <a href="<%= following_user_path(@user) %>">
        <strong id="following" class="stat">
          Fan of <%= pluralize(@user.following.count, "user") %>
        </strong>
      </a>

    </h3>
    <%= render 'shared/feed' %>
</div>
</div>
<% else %>

<div class="center jumbotron">
<h1 id="main">Groceries.
    <br>
    Exchange Ideas and Tips Now!</h1>

<h2>
    A social sharing community for FMCG products.</h2>

<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary", id: "signup" %>
</div>

<% end %>
