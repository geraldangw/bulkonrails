<% provide(:title, @user.firstname) %>
<div class="row">

  <div>
    <%= render 'follow_form' if logged_in? %>
      <h1 id="profileheader"><%= @user.firstname %>'s Products (<%= @user.products.count %>)</h1>
        <% if @user.products.any? %>
        <div class="stats">
      <a href="<%= followers_user_path(@user) %>">
        <strong class="stat" id="fans">
        <%= pluralize(@user.followers.count, "fan") %> of <%= @user.firstname %>'s products.
        </strong>
      </a>
    </div>
      <ol class="products">
        <%= render @products %>
      </ol>
      <%= will_paginate @products %>
    <% end %>
  </div>
</div>
